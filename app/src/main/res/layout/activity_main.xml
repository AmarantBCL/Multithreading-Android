<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/half_margin"
    tools:context=".MainActivity">

    <Button
        style="@style/LargeButtonStyle"
        android:id="@+id/btn_asynctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/half_margin"
        android:backgroundTint="@color/blue"
        android:text="@string/asynctask_activity"/>

    <Button
        style="@style/LargeButtonStyle"
        android:id="@+id/btn_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/half_margin"
        android:backgroundTint="@color/teal_700"
        android:text="@string/loader_activity"/>

    <Button
        style="@style/LargeButtonStyle"
        android:id="@+id/btn_threads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/half_margin"
        android:backgroundTint="@color/violet"
        android:text="@string/threads_activity"/>

</LinearLayout>